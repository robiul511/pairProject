<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutors</title>
</head>
<body>
  <%- include('./partials/navbar.ejs') %>
  <h1>Tutors Data</h1>
  <table border="1">
      <thead>
          <tr>
              <th> ID </th>
              <th> Name </th>
              <th> Age </th>
              <th> Gender </th>
              <th> Subject </th>
              <th> Actions </th>
          </tr>
      </thead>

      <tbody>
          <% data.forEach((element, index) => { %>
              <tr>
                  <td> <%= element.id %> </td>
                  <td> <%= element.nameFormatter() %> </td>
                  <td> <%= element.age %> </td>
                  <td> <%= element.gender %> </td>
                  <td> <%= element.subject %> </td>
                  <td>
                      <a href="tutors/students/<%= element.id %>"> Show Students </a>
                  </td>
              </tr>
          <% }) %>
      </tbody>
  </table>
</body>
</html>